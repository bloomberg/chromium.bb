mojo_sdk_source_set("test_support_standalone") {
  testonly = true
  restrict_external_deps = false
  sources = [
    "lib/application_test_main.cc",
  ]

  public_deps = [
    ":test_support",
  ]

  deps = [
    ":application",
    "//mojo/application/public/interfaces",
  ]

  mojo_sdk_deps = [
