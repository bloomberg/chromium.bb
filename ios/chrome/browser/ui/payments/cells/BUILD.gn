    "autofill_profile_item.mm",
    "page_info_item.h",
    "page_info_item.mm",
    "payment_method_item.h",
    "payment_method_item.mm",
    "payments_is_selectable.h",
    "payments_selector_edit_item.h",
    "payments_selector_edit_item.mm",
    "payments_text_item.h",
    "payments_text_item.mm",
    "price_item.h",
