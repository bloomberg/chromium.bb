    "//ios/chrome/browser/ui/alert_coordinator",
    "//ios/shared/chrome/browser/ui/dialogs",
    "//ios/web",
    "//ui/base",
    "//url",
  ]
  libs = [ "UIKit.framework" ]
}

source_set("unit_tests_internal") {
  configs += [ "//build/config/compiler:enable_arc" ]
