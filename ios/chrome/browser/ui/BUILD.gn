}

source_set("network_activity_indicator_manager") {
  sources = [
    "network_activity_indicator_manager.h",
    "network_activity_indicator_manager.mm",
  ]
  deps = [
    "//base",
  ]
  configs += [ "//build/config/compiler:enable_arc" ]
}

