source_set("common") {
  sources = [
    "page_end_reason.h",
    "page_load_metrics_constants.h",
    "page_load_metrics_util.cc",
    "page_load_metrics_util.h",
    "page_load_timing.cc",
    "page_load_timing.h",
  ]
  deps = [
    ":page_load_metrics_mojom",
    "//base",
    "//net",
    "//third_party/blink/public:blink_headers",
