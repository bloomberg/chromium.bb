import("//build/buildflag_header.gni")
import("//build/config/ios/asset_catalog.gni")
import("//build/config/ios/ios_sdk.gni")

source_set("confirmation_alert") {
  configs += [ "//build/config/compiler:enable_arc" ]
  sources = [
    "confirmation_alert_action_handler.h",
    "confirmation_alert_view_controller.h",
    "confirmation_alert_view_controller.mm",
  ]
  deps = [
    ":confirmation_alert_ic_help",
    "//ios/chrome/common/ui/colors",
    "//ios/chrome/common/ui/util",
    "//ios/chrome/common/ui/util:dynamic_type_util",
  ]
  libs = [ "UIKit.framework" ]
}

imageset("confirmation_alert_ic_help") {
  sources = [
    "resources/confirmation_alert_ic_help.imageset/Contents.json",
    "resources/confirmation_alert_ic_help.imageset/confirmation_alert_ic_help@2x.png",
    "resources/confirmation_alert_ic_help.imageset/confirmation_alert_ic_help@3x.png",
  ]
}
