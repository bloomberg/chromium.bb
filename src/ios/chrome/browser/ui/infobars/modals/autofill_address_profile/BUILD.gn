    "//ios/chrome/browser/ui/autofill:autofill_ui_type",
    "//ios/chrome/browser/ui/table_view",
    "//ios/chrome/browser/ui/table_view:test_support",
    "//ios/chrome/test:test_support",
    "//testing/gtest",
    "//third_party/ocmock",
