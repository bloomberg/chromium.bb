    "infobar_container_coordinator.h",
    "infobar_container_coordinator.mm",
    "infobar_container_mediator.h",
    "infobar_container_mediator.mm",
  ]
  deps = [
    ":feature_flags",
    ":infobars_ui",
    ":public",
    "//base",
    "//ios/chrome/browser",
    "//ios/chrome/browser/infobars",
    "//ios/chrome/browser/infobars:badge",
