source_set("u2f") {
  sources = [
    "u2f_tab_helper.h",
    "u2f_tab_helper.mm",
  ]
  deps = [
    ":u2f_internal",
    "//base",
    "//ios/chrome/browser/web:tab_id_tab_helper",
    "//ios/web",
    "//net",
    "//url",
  ]

  configs += [ "//build/config/compiler:enable_arc" ]
}

source_set("u2f_internal") {
  sources = [
    "u2f_controller.h",
    "u2f_controller.mm",
  ]
  deps = [
    "//base",
    "//components/google/core/common",
    "//crypto",
    "//ios/chrome/browser",
    "//ios/chrome/common",
    "//ios/web/public",
    "//ios/web/public/deprecated",
    "//net",
    "//url",
  ]
  configs += [ "//build/config/compiler:enable_arc" ]
}

source_set("unit_tests") {
  testonly = true
  sources = [
    "u2f_controller_unittest.mm",
    "u2f_tab_helper_unittest.mm",
  ]
  deps = [
    ":u2f",
    ":u2f_internal",
    "//base",
    "//ios/chrome/browser",
    "//ios/chrome/browser/web:tab_id_tab_helper",
    "//ios/web/public/deprecated",
    "//ios/web/public/test/fakes",
    "//net",
    "//testing/gmock",
    "//testing/gtest",
    "//url",
  ]

  configs += [ "//build/config/compiler:enable_arc" ]
}
