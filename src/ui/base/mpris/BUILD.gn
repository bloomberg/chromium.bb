component("mpris") {
  sources = [
    "mpris_service.cc",
    "mpris_service.h",
    "mpris_service_impl.cc",
    "mpris_service_impl.h",
    "mpris_service_observer.h",
  ]

  defines = [ "IS_MPRIS_IMPL" ]

