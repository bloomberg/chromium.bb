    "//base",
    "//base/test:test_support",
    "//components/dbus/thread_linux",
    "//dbus",
    "//dbus:test_support",
    "//testing/gmock",
    "//testing/gtest",
  ]
}

static_library("test_support") {
  testonly = true

  sources = [
    "mock_mpris_service.cc",
    "mock_mpris_service.h",
  ]

  deps = [
    ":mpris",
    "//base",
    "//testing/gmock",
  ]
}
