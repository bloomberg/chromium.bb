mojom = "//ui/events/mojo/event.mojom"
public_headers = [ "//ui/events/event.h" ]
traits_headers = [ "//ui/events/mojo/event_struct_traits.h" ]
public_deps = [
  "//ui/events",
  "//ui/events:dom_keycode_converter",
  "//ui/gfx/geometry/mojo",
  "//ui/latency/mojo:interfaces",
]
