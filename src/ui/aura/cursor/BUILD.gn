    "cursor_loader.cc",
    "cursor_loader.h",
    "cursor_lookup.cc",
    "cursor_lookup.h",
    "cursor_util.cc",
    "cursor_util.h",
    "cursors_aura.cc",
    "cursors_aura.h",
  ]
  defines = [ "IS_UI_AURA_CURSOR_IMPL" ]
