  schema_sources_ += [ "input_ime.json" ]
}

if (enable_service_discovery) {
  schema_sources_ += [ "mdns.idl" ]
}

uncompiled_sources_ = [
  "action.json",
  "browser_action.json",
  "browsing_data.json",
  "extension.json",
  "idltest.idl",
  "page_action.json",
  "top_sites.json",
]

