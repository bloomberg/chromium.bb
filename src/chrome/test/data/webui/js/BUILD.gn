import("//tools/typescript/ts_library.gni")
import("//ui/webui/resources/tools/generate_grd.gni")

generate_grd("build_grdp") {
  grd_prefix = "webui_js"
  out_grd = "$target_gen_dir/resources.grdp"

  deps = [ ":build_ts" ]
  manifest_files = [ "$target_gen_dir/tsconfig.manifest" ]
  resource_path_prefix = "js"
}

ts_library("build_ts") {
  root_dir = "."
  out_dir = "$target_gen_dir/tsc"
  tsconfig_base = "tsconfig_base.json"
  path_mappings = [ "chrome://webui-test/*|" +
                    rebase_path("$root_gen_dir/chrome/test/data/webui/tsc/*",
                                target_gen_dir) ]
  in_files = [
    "color_utils_test.ts",
    "cr_test.ts",
    "custom_element_test.ts",
    "i18n_behavior_test.js",
    "i18n_mixin_test.ts",
    "icon_test.ts",
    "load_time_data_test.ts",
    "parse_html_subset_test.ts",
    "parse_html_subset_trusted_types_test.ts",
    "promise_resolver_test.ts",

    # TODO(1189595): Need to add TypeScript definitions for TrustedHTML before
    # passing this file to the TS Compiler.
    #"static_types_test.js",

    "util_test.ts",
    "web_ui_listener_mixin_test.ts",

    "cr/event_target_test.ts",
  ]

  definitions = [ "//tools/typescript/definitions/chrome_send.d.ts" ]

  deps = [
    "//ui/webui/resources:library",
    "//ui/webui/resources/mojo:library",
  ]
  extra_deps = [ "..:generate_definitions" ]
}
