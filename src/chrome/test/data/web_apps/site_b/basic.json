{
  "name": "Site B",
  "icons": [
    {
      "src": "basic-48.png",
      "sizes": "48x48",
      "type": "image/png"
    },
    {
      "src": "basic-192.png",
      "sizes": "192x192",
      "type": "image/png"
    }
  ],
  "start_url": "/web_apps/site_b/basic.html",
  "scope": "/web_apps/site_b/",
  "display": "minimal-ui",
  "file_handlers": [
    {
      "action": "/web_apps/site_b/text_handler.html",
      "name": "Plain Text",
      "accept": {
        "text/plain": [".txt", ".md", ".csv", ".text"]
      }
    },
    {
      "action": "/web_apps/site_b/image_handler.html",
      "accept": {
        "image/png": [".png"]
      },
      "launch_type": "multiple-clients"
    }
  ]
}
