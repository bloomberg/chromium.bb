  sources = [
    "java/res/drawable-hdpi/vr_services.png",
    "java/res/drawable-mdpi/vr_services.png",
    "java/res/drawable-xhdpi/vr_services.png",
    "java/res/drawable-xxhdpi/vr_services.png",
    "java/res/drawable-xxxhdpi/vr_services.png",
