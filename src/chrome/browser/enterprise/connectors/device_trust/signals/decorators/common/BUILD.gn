import("//build/config/chromeos/ui_mode.gni")

source_set("common") {
  public = [
    "common_signals_decorator.h",
    "signals_decorator.h",
  ]

  sources = [ "common_signals_decorator.cc" ]

  public_deps = [ "//chrome/browser/enterprise/connectors/device_trust/attestation/common/proto:attestation_ca_proto" ]

  deps = [ "//components/policy/core/common" ]
}

source_set("test_support") {
  testonly = true
  sources = [
    "mock_signals_decorator.cc",
    "mock_signals_decorator.h",
  ]

  public_deps = [
    ":common",
    "//chrome/browser/enterprise/connectors/device_trust/attestation/common/proto:attestation_ca_proto",
    "//testing/gmock",
  ]
}

source_set("unit_tests") {
  testonly = true
  sources = [ "common_signals_decorator_unittest.cc" ]

  deps = [
    ":common",
    "//build:chromeos_buildflags",
    "//chrome/browser/enterprise/connectors/device_trust/attestation/common/proto:attestation_ca_proto",
    "//testing/gtest",
  ]

  if (is_chromeos_ash) {
    deps += [ "//chromeos/system" ]
  }
}
