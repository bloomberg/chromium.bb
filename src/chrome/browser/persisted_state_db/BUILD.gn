import("//testing/test.gni")
import("//third_party/protobuf/proto_library.gni")

source_set("persisted_state_db") {
  sources = [
    "profile_proto_db.h",
    "profile_proto_db_factory.cc",
    "profile_proto_db_factory.h",
  ]

  if (is_android) {
    sources += [
      "persisted_state_db.cc",
      "persisted_state_db.h",
