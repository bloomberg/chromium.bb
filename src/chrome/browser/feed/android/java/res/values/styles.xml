<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="MenuFooterChip" parent="Chip">
        <item name="cornerRadius">@dimen/chip_default_height</item>
        <!-- TODO(crbug.com/1152592): Figure out why setting TextAppearance isn't working for
             ChipView. -->
        <item name="primaryTextAppearance">@style/TextAppearance.MenuChip.Text.Blue</item>
        <item name="chipColor">@color/menu_footer_chip_background</item>
        <item name="solidColorChip">true</item>
        <item name="textAlignStart">true</item>
        <item name="reduceEndPadding">true</item>
        <item name="reduceTextStartPadding">true</item>
        <item name="iconHeight">@dimen/menu_footer_chip_icon_size</item>
        <item name="iconWidth">@dimen/menu_footer_chip_icon_size</item>
        <item name="verticalInset">@dimen/menu_footer_chip_vertical_inset</item>
    </style>

    <style name="MenuFooterChipInverse" parent="MenuFooterChip">
        <item name="chipColor">@color/menu_item_bg_color</item>
        <item name="chipStrokeColor">@color/chip_hairline_color</item>
        <item name="solidColorChip">false</item>
    </style>
</resources>
