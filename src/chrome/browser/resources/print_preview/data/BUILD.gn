  deps = [
    ":destination",
    "//ui/webui/resources/js:assert.m",
  ]
}

js_library("cloud_parsers") {
  deps = [
    ":destination",
    "//ui/webui/resources/js:assert.m",
  ]
}

js_library("destination") {
