    deps += [
      ":destination_policies",
      "..:native_layer_cros",
    ]
  }
}

js_library("document_info") {
  deps = [
    ":coordinate2d",
    ":margins",
    ":printable_area",
    ":size",
    "//third_party/polymer/v3_0/components-chromium/polymer:polymer_bundled",
    "//ui/webui/resources/js:web_ui_listener_behavior.m",
  ]
}

js_library("margins") {
}

js_library("measurement_system") {
