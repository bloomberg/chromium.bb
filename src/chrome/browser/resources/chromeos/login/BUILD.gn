# OOBE's default set of resources based on a manually created GRD file residing
# in this directory. Having a manually created GRD enables us to serve different
# files under the same resource path by controlling at runtime which file to
# associate the resource path with, based on a feature/flag/condition/etc.
# Used for both non-modulized and modulized resources that need to be served
# conditionally during runtime.
# -----------------------------------------------------------------------------
grit("resources") {
  # Needed since some of the files are gerated during build time.
  enable_input_discovery_for_gn_analyze = false

  source = "oobe_resources.grd"
  outputs = [
    "grit/oobe_resources.h",
    "oobe_resources.pak",
  ]

  # Some autogenerated files need to be served conditionally through this GRD.
  deps = [ ":preprocess_autogenerated_modules" ]
  output_dir = "$root_gen_dir/chrome"
}

oobe_autogenerated_modules_manifest = "oobe_autogenerated_modules_manifest.json"
oobe_preprocessed_folder = "oobe_preprocessed"

# Set of OOBE resources that are used exclusively with Polymer3. All resources
# are made available to the WebUI through the generated C++ resource map. As a
# consequence, it is not possible to conditionally serve these resources in an
# easy way.
# -----------------------------------------------------------------------------
grit("modulized_resources") {
  defines = chrome_grit_defines

  # This is necessary since the GRD is generated during build time.
  enable_input_discovery_for_gn_analyze = false

  source = "$target_gen_dir/oobe_modulized_resources.grd"
  deps = [ ":build_oobe_modulized_grd" ]
  outputs = [
    "grit/oobe_modulized_resources.h",
    "grit/oobe_modulized_resources_map.h",
    "grit/oobe_modulized_resources_map.cc",
    "oobe_modulized_resources.pak",
  ]
  output_dir = "$root_gen_dir/chrome"
}

# Generates a GRD file for OOBE that contains only modulized versions that do
# not need to be served conditionally. Modulized resources that need to be
# served conditionally have to use OOBE's default GRD file (oobe_resources.grd)
# -----------------------------------------------------------------------------
generate_grd("build_oobe_modulized_grd") {
  grd_prefix = "oobe_modulized"
  out_grd = "$target_gen_dir/${grd_prefix}_resources.grd"
  input_files = [
    # Files that are not automatically generated.
    "i18n_setup.js",
  ]
  input_files_base_dir = rebase_path(".", "//")
  deps = [ ":preprocess_autogenerated_modules" ]
  manifest_files = [ "$target_gen_dir/$oobe_autogenerated_modules_manifest" ]
}

# Preprocess autogenerated files by copying them to an intermediate location
# and generating a manifest file to be used when generating OOBE's modulized
# GRD file.
# -----------------------------------------------------------------------------
preprocess_if_expr("preprocess_autogenerated_modules") {
  deps = [ ":polymer3_elements" ]
  in_folder = target_gen_dir
  out_folder = "$target_gen_dir/$oobe_preprocessed_folder"
  out_manifest = "$target_gen_dir/$oobe_autogenerated_modules_manifest"
  in_files = [
    "components/hd_iron_icon.m.js",
    "components/oobe_icons.m.js",
    "components/behaviors/oobe_dialog_host_behavior.m.js",
    "components/behaviors/oobe_focus_behavior.m.js",
    "components/behaviors/oobe_i18n_behavior.m.js",
    "components/behaviors/oobe_scrollable_behavior.m.js",
    "components/buttons/oobe_back_button.m.js",
    "components/buttons/oobe_icon_button.m.js",
    "components/buttons/oobe_next_button.m.js",
    "components/buttons/oobe_text_button.m.js",
    "components/dialogs/oobe_adaptive_dialog.m.js",
    "components/dialogs/oobe_content_dialog.m.js",
    "components/dialogs/oobe_loading_dialog.m.js",
    "components/dialogs/oobe_modal_dialog.m.js",
    "components/oobe_vars/oobe_shared_vars_css.m.js",
    "components/common_styles/common_styles.m.js",
    "components/common_styles/oobe_dialog_host_styles.m.js",
  ]
}

