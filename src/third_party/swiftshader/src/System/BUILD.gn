import("../swiftshader.gni")

swiftshader_source_set("System_headers") {
  sources = [
    "Build.hpp",
    "CPUID.hpp",
    "Configurator.hpp",
    "Debug.hpp",
    "Half.hpp",
    "LRUCache.hpp",
    "Math.hpp",
    "Memory.hpp",
    "Socket.cpp",
    "Socket.hpp",
    "Timer.hpp",
  ]
  if (is_linux || is_android) {
    sources += [
      "Linux/MemFd.hpp",
    ]
  }
}

swiftshader_source_set("System") {
  sources = [
    "Build.cpp",
    "CPUID.cpp",
    "Configurator.cpp",
    "Debug.cpp",
    "Half.cpp",
    "Math.cpp",
    "Memory.cpp",
    "Timer.cpp",
  ]
  if (is_linux || is_android) {
    sources += [
      "Linux/MemFd.cpp",
    ]
  }

  include_dirs = [ ".." ]
  public_deps = [
    ":System_headers",
  ]
}
