import("../../../scripts/build/ninja/devtools_entrypoint.gni")
import("../../../scripts/build/ninja/devtools_module.gni")

devtools_module("changes") {
  sources = [
    "ChangesHighlighter.ts",
    "ChangesSidebar.ts",
    "ChangesTextEditor.ts",
    "ChangesView.ts",
  ]

  deps = [
    "../../core/common:bundle",
    "../../core/i18n:bundle",
    "../../diff:bundle",
    "../../snippets:bundle",
    "../../text_editor:bundle",
    "../../ui/legacy:bundle",
    "../../workspace:bundle",
    "../../workspace_diff:bundle",
