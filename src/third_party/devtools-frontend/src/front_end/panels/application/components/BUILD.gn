generate_css("css_files") {
  sources = [
    "badge.css",
    "frameDetailsReportView.css",
    "originTrialTokenRows.css",
    "originTrialTreeView.css",
    "permissionsPolicySection.css",
    "reportingApiGrid.css",
    "stackTraceLinkButton.css",
    "stackTraceRow.css",
    "trustTokensView.css",
    "trustTokensViewDeleteButton.css",
  ]
