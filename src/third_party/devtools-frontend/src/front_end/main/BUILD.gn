    "ExecutionContextSelector.ts",
    "MainImpl.ts",
    "SimpleApp.ts",
  ]

  deps = [
    "../components:bundle",
    "../core/common:bundle",
    "../core/host:bundle",
    "../core/i18n:bundle",
    "../core/platform:bundle",
    "../core/protocol_client:bundle",
