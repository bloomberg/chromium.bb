devtools_entrypoint("bundle") {
  entrypoint = "main.ts"

  deps = [ ":main" ]
}

devtools_entrypoint("legacy") {
  entrypoint = "main-legacy.ts"

  deps = [ ":bundle" ]
}

devtools_entrypoint("meta") {
  entrypoint = "main-meta.ts"

  deps = [
    ":bundle",
    "../inspector_main:bundle",
  ]
}
