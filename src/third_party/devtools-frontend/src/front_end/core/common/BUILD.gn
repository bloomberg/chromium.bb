import("../../../scripts/build/ninja/devtools_entrypoint.gni")
import("../../../scripts/build/ninja/devtools_module.gni")

ts_library("ColorUtils") {
  sources = [ "ColorUtils.ts" ]
}

devtools_module("common") {
  sources = [
    "App.ts",
    "AppProvider.ts",
    "Base64.ts",
    "CharacterIdMap.ts",
    "Color.ts",
    "Console.ts",
    "Debouncer.ts",
    "EventTarget.ts",
    "JavaScriptMetaData.ts",
    "Lazy.ts",
    "Linkifier.ts",
    "Mutex.ts",
    "Object.ts",
    "ParsedURL.ts",
    "Progress.ts",
    "QueryParamHandler.ts",
    "ResolverBase.ts",
    "ResourceType.ts",
    "Revealer.ts",
    "Runnable.ts",
    "SegmentedRange.ts",
    "SettingRegistration.ts",
    "Settings.ts",
    "SimpleHistoryManager.ts",
    "StringOutputStream.ts",
    "TextDictionary.ts",
    "Throttler.ts",
    "Trie.ts",
    "WasmDisassembly.ts",
    "Worker.ts",
  ]

  deps = [
    ":ColorUtils",
    "../../core/i18n:bundle",
    "../../core/platform:bundle",
    "../../core/root:bundle",
  ]

  # Add files built by ColorUtils ts_library so that they are included in layout tests.
  data = filter_include(get_target_outputs(":ColorUtils"),
                        [
                          "*.js",
                          "*.map",
                        ])
}

devtools_entrypoint("bundle") {
  entrypoint = "common.ts"

  deps = [
    ":ColorUtils",
    ":common",
  ]

  visibility = [ "*" ]
}

devtools_entrypoint("legacy") {
  entrypoint = "common-legacy.ts"

  deps = [ ":bundle" ]

  visibility = [
    "../..:legacy_entrypoints",
    "../../entrypoints/shell/*",
    "../../legacy_test_runner/*",
  ]
}
