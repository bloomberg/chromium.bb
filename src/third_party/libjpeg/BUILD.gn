  defines = [ "NO_GETENV" ]  # getenv() is not thread-safe.

  configs -= [ "//build/config/compiler:chromium_code" ]
  configs += [
    ":libjpeg_config",
    "//build/config/compiler:no_chromium_code",
  ]

  public_configs = [ ":libjpeg_config" ]
}
