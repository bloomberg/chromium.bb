<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<project default="javadoc">

  <property file="build.properties" />

  <target name="javadoc">
    <javadoc access="public" 
        author="true" 
        classpath="lib/icu4j-charset-4_8_1_1.jar:lib/icu4j-4_8_1_1.jar:lib/jcommander-1.27.jar:lib/junit-4.10.jar" 
        destdir="${javadoc.dir}" 
        nodeprecated="false" 
        nodeprecatedlist="false" 
        noindex="false" 
        nonavbar="false" 
        notree="false" 
        packagenames="com.google.typography.font.sfntly.table.truetype,com.google.typography.font.tools.subsetter,com.google.typography.font.sfntly,com.google.typography.font.tools.conversion.eot,com.google.typography.font.sfntly.data,com.google.typography.font.tools.conversion.woff,com.google.typography.font.tools.fontinfo,com.google.typography.font.sfntly.table.core,com.google.typography.font.sfntly.sample.sfntdump,com.google.typography.font.tools.sfnttool,com.google.typography.font.sfntly.math,com.google.typography.font.sfntly.table.bitmap,com.google.typography.font.sfntly.testutils,com.google.typography.font.sfntly.sample.sflint,com.google.typography.font.sfntly.table" source="1.6" 
        sourcepath="src:test" 
        splitindex="true" 
        use="true" 
        version="true"/>
  </target>
    
  <target name="doc-jar" depends="javadoc">
    <mkdir dir="${dist_javadoc.dir}" />
    <jar destfile="${dist_javadoc.dir}/${ant.project.name}-javadoc.jar" 
      basedir="${javadoc.dir}" 
    />
  </target>

</project>
