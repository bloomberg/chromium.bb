import("//build_overrides/build.gni")

source_set("mdns") {
  sources = [
    "mdns/mdns_constants.h",
    "mdns/mdns_reader.cc",
    "mdns/mdns_reader.h",
    "mdns/mdns_records.cc",
    "mdns/mdns_records.h",
    "mdns/mdns_sender.cc",
    "mdns/mdns_sender.h",
    "mdns/mdns_writer.cc",
    "mdns/mdns_writer.h",
  ]

  deps = [
    "../../platform",
    "../../third_party/abseil",
    "../../util",
  ]

  configs += [ "../../build:allow_build_from_embedder" ]
}

source_set("mdns_unittests") {
  testonly = true

  sources = [
    "mdns/mdns_reader_unittest.cc",
    "mdns/mdns_records_unittest.cc",
    "mdns/mdns_sender_unittest.cc",
    "mdns/mdns_writer_unittest.cc",
  ]

  deps = [
    ":mdns",
    "../../platform",
    "../../third_party/abseil",
    "../../third_party/googletest:gmock",
    "../../third_party/googletest:gtest",
    "../../util",
  ]

  configs += [ "../../build:allow_build_from_embedder" ]
}
