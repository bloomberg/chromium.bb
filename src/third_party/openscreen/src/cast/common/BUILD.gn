openscreen_fuzzer_test("message_framer_fuzzer") {
  sources = [
    "channel/message_framer_fuzzer.cc",
  ]
  deps = [
    ":channel",
  ]

  seed_corpus = "channel/message_framer_fuzzer_seeds"

  # NOTE: 65536 is max _body_ size.
  libfuzzer_options = [ "max_len=65600" ]
}
