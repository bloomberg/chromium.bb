mojom("web_bluetooth_mojo_bindings") {
  visibility = [
    "//third_party/blink/common",
    "//third_party/blink/public/common:common",
    "//third_party/blink/public/common:headers",
  ]

  visibility_blink = [
    "//third_party/blink/common",
    "//third_party/blink/public/common:common",
    "//third_party/blink/public/common:headers",
    "//third_party/blink/renderer/platform:blink_platform_public_deps",
