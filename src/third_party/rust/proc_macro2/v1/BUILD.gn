import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "proc_macro2"
  epoch = "1"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  sources = [ "crate/src/lib.rs" ]
  edition = "2018"
  cargo_pkg_version = "1.0.32"
  cargo_pkg_authors =
      "David Tolnay <dtolnay@gmail.com>, Alex Crichton <alex@alexcrichton.com>"
  cargo_pkg_name = "proc-macro2"
  cargo_pkg_description = "A substitute implementation of the compiler's `proc_macro` API to decoupletoken-based libraries from the procedural macro use case."
  deps = [ "//third_party/rust/unicode_xid/v0_2:lib" ]
  features = [
    "proc-macro",
    "span-locations",
  ]
  build_root = "crate/build.rs"
  build_sources = [ "crate/build.rs" ]
}
