import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "autocxx"
  epoch = "0.22"
  crate_type = "rlib"
  crate_root = "crate/src/lib.rs"

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  sources = [ "crate/src/lib.rs" ]
  edition = "2021"
  cargo_pkg_version = "0.22.2"
  cargo_pkg_authors = "Adrian Taylor <adetaylor@chromium.org>"
  cargo_pkg_name = "autocxx"
  cargo_pkg_description = "Safe autogenerated interop between Rust and C++"
  deps = [
    "//third_party/rust/aquamarine/v0_1:lib",
    "//third_party/rust/autocxx_macro/v0_22:lib",
    "//third_party/rust/cxx/v1:lib",
    "//third_party/rust/moveit/v0_5:lib",
  ]
}
