# http://editorconfig.org
root = true

[*]
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[*.cmake,CMakeLists.txt]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.sh]
trim_trailing_whitespace = true
end_of_line = lf

[*.adoc]
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
