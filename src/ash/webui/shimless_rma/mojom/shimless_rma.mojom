  kIdle = 0,
  kCheckingForUpdate = 1,
  kUpdateAvailable = 2,
  kDownloading = 3,
  kVerifying = 4,
  kFinalizing = 5,
  kUpdatedNeedReboot = 6,
  kReportingErrorEvent = 7,
  kAttemptingRollback = 8,
  kDisabled = 9,
