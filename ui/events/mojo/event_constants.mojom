// AcceleratorPhase specifies which phase of event matching the matcher should
// be considered for. See WindowTree for details on how it handles the
// AcceleratorPhase.
enum AcceleratorPhase {
  PRE_TARGET,
  POST_TARGET,
};

enum EventType {
  UNKNOWN,
  KEY_PRESSED,
  KEY_RELEASED,
  POINTER_DOWN,
  POINTER_MOVED,
  POINTER_UP,
  POINTER_CANCELLED,
  POINTER_ENTERED,
  POINTER_EXITED,
  POINTER_WHEEL_CHANGED,
  POINTER_CAPTURE_CHANGED,
  GESTURE_TAP,
  SCROLL,
  SCROLL_FLING_START,
  SCROLL_FLING_CANCEL,
};

