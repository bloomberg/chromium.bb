import("//build/config/jumbo.gni")
import("//build/config/ui.gni")
import("//ui/ozone/ozone.gni")

assert(use_x11 || ozone_platform_x11)

jumbo_component("x") {
  output_name = "gfx_x11"

  sources = [
    "../gfx_export.h",
    "x11_atom_cache.cc",
    "x11_atom_cache.h",
    "x11_connection.cc",
    "x11_connection.h",
    "x11_error_tracker.cc",
    "x11_error_tracker.h",
    "x11_path.cc",
    "x11_path.h",
    "x11_switches.cc",
    "x11_switches.h",
    "x11_types.cc",
    "x11_types.h",
  ]

  defines = [ "GFX_IMPLEMENTATION" ]

  configs += [ "//build/config/linux:x11" ]

  deps = [
    "//base",
    "//skia",
  ]
}
