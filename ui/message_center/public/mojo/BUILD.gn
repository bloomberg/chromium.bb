    "//mojo/common:common_custom_types",
    "//mojo/public/cpp/bindings",
    "//ui/gfx",
    "//ui/gfx/image/mojo:struct_traits",
    "//ui/message_center/public/cpp",
    "//url/mojom:url_mojom_gurl",
  ]
