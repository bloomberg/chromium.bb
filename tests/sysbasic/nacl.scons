Import('env')

env.ComponentProgram('sysbasic.nexe',
                     'sysbasic.c',
                     EXTRA_LIBS=['pthread'],
                     )
node = env.CommandSelLdrTestNacl(
    'sysbasic_test.out',
    sel_ldr_flags=['-P', '69', '-d'],
    command=[env.File('sysbasic.nexe')],
    exit_status='69',
    )
env.AddNodeToTestSuite(node,
                       ['small_tests', 'sel_ldr_tests'],
                       'run_sysbasic_test')


