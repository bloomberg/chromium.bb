Import('env')

# TODO(robertm): fix this (might be just a C++ issue)
if env['TARGET_ARCHITECTURE'] == 'arm':
  Return()

env.FilterOut(CCFLAGS = ['-pedantic'])

env.Prepend(CPPDEFINES = ['XP_UNIX'])

env.Append(CPPPATH = ['$NACL_SDK_INCLUDE/nacl'])

nacl_npplugin_test_inputs = [
  'event_handler.cc',
  'gles2_demo_cc.cc',
  'main.cc',
  'plugin_object.cc',
  'test_object.cc',
]

# TODO: should this link against the sdk version of google_nacl_npruntime?
env.ComponentProgram('pepper_plugin.nexe', nacl_npplugin_test_inputs,
                     EXTRA_LIBS=['google_nacl_imc',
                                 'google_nacl_npruntime',
                                 'google_nacl_pgl',
                                 'google_nacl_gpu',
                                 'pthread',
                                 'srpc'])


# Note that the html is required to run this program.
env.Publish('pepper_plugin.nexe', 'run', [
    'pepper_plugin.html',
    'nacl.png',
  ]
)
