  testonly = true

  sources = [
    "fake_connection_establisher.cc",
    "fake_connection_establisher.h",
  ]

  deps = [
    ":android_sms",
    "//content/public/browser",
  ]
}

source_set("unit_tests") {
  testonly = true

  sources = [
    "connection_establisher_impl_unittest.cc",
    "connection_manager_unittest.cc",
  ]

  deps = [
    ":android_sms",
    ":android_sms_urls",
