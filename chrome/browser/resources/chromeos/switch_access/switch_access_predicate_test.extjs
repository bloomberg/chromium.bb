        const t = getTree(desktop);

        assertTrue(SwitchAccessPredicate.isGroup(t.root, t.root));
        assertTrue(SwitchAccessPredicate.isGroup(t.upper1, t.root));
        assertFalse(SwitchAccessPredicate.isGroup(t.upper2, t.root));
