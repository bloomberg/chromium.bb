<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/list_item_default_margin"
    android:paddingTop="@dimen/list_item_top_bottom_padding"
    android:paddingBottom="@dimen/list_item_top_bottom_padding"
    android:orientation="horizontal" >

    <include layout="@layout/modern_list_item_view" />

    <org.chromium.chrome.browser.widget.TintedImageButton
        android:id="@+id/selected_view"
        style="@style/ListItemEndIcon"
        android:src="@drawable/ic_check_googblue_24dp" />
</LinearLayout>
