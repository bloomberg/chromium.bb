    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/placeholder"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/placeholder_favicon"
            android:importantForAccessibility="no"
            android:layout_width="@dimen/open_last_tab_placeholder_image_size"
            android:layout_height="@dimen/open_last_tab_placeholder_image_size"
            android:scaleType="centerInside"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/chrome_sync_logo"/>

        <Space
          android:layout_width="match_parent"
          android:layout_height="@dimen/open_last_tab_placeholder_image_margin_bottom"/>

        <TextView
            android:id="@+id/placeholder_text"
            android:textAppearance="@style/TextAppearance.BlackTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/open_last_tab_placeholder" />

    </LinearLayout>