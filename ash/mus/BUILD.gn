    ":lib",
    ":resources",
    ":resources_200",
    "//services/service_manager/public/cpp",
  ]

  # TODO(beng): This target relies on //mash/session, but there is a cycle so we
  #             can't state that dependency here.
  data_deps = [
    ":resources",
    ":resources_200",
    "//services/ui",
  ]
}

service_manifest("manifest") {
  name = "ash"
  source = "manifest.json"
}

