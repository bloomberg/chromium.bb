{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],

    /* Output options */
    "sourceMap": true,
    "module": "esnext",
    "noEmit": true,

    /* Strict type-checking options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "allowJs": false,

    /* Additional checks */
    "noFallthroughCasesInSwitch": true,

    /* Module Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./src",
  },
  "include": [
    "./src",
  ]
}
