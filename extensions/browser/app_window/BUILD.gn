  sources = [
    "app_delegate.h",
    "app_web_contents_helper.cc",
    "app_web_contents_helper.h",
    "app_window.cc",
    "app_window.h",
    "app_window_client.cc",
    "app_window_client.h",
    "app_window_contents.cc",
    "app_window_contents.h",
    "app_window_geometry_cache.cc",
    "app_window_geometry_cache.h",
    "app_window_registry.cc",
