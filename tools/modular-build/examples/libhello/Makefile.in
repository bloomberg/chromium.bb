srcdir = @srcdir@
prefix = @prefix@

all:

libhello.so: $(srcdir)/libhello.c
	gcc -shared -fPIC $< -o $@

install: libhello.so
	install -d $(DESTDIR)$(prefix)/lib
	install -d $(DESTDIR)$(prefix)/include
	install libhello.so $(DESTDIR)$(prefix)/lib
	install $(srcdir)/libhello.h $(DESTDIR)$(prefix)/include
