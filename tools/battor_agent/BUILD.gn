import("//testing/test.gni")

executable("battor_agent") {
  sources = [
    "battor_agent_bin.cc",
  ]
  deps = [
    ":battor_agent_lib",
    "//base",
    "//device/serial",
    "//mojo/public/c/system:for_shared_library",
  ]
