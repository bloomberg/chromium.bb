    "$libaddressinput_dir/cpp/src/address_data.cc",
    "$libaddressinput_dir/cpp/src/address_field.cc",
    "$libaddressinput_dir/cpp/src/address_formatter.cc",
    "$libaddressinput_dir/cpp/src/address_metadata.cc",
