module blink.mojom;

import "mojo/public/mojom/base/string16.mojom";

// Implemented in Blink, this interface allows to retrieve the text surrounding
// the current text selection, along with its start & end offsets, for a given
// frame, from the browser process (accessed from content::RenderFrameHostImpl).
interface SurroundingText {
  // Retrieves the text surrounding the current selection for the frame up to
  // the length specified by |max_length|, along with its start and end offsets.
  GetTextSurroundingSelection(uint32 max_length)
      => (mojo_base.mojom.String16 content, uint32 start_offset,
          uint32 end_offset);
};
