{
  "extensions": [
    {
      "type": "view",
      "location": "drawer-view",
      "id": "release-note",
      "title": "What's New",
      "persistence": "closeable",
      "order": 1,
      "className": "Help.ReleaseNoteView"
    },
    {
      "type": "setting",
      "category": "Appearance",
      "title": "Show What's New after each update",
      "settingName": "help.show-release-note",
      "settingType": "boolean",
      "defaultValue": true,
      "options": [
          {
              "value": true,
              "title": "Show What's New after each update"
          },
          {
              "value": false,
              "title": "Do not show What's New after each update"
          }
      ]
    }
  ],
  "dependencies": [
    "ui",
    "host"
  ],
  "scripts": [
    "Help.js",
    "ReleaseNoteView.js",
    "ReleaseNoteText.js"
  ],
  "resources": [
    "releaseNote.css"
  ]
}
