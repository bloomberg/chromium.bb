    else
    {%- if compute_length %}
        {{ set_value(property) }}(primitiveValue->computeLength<{{property.type_name}}>(state.cssToLengthConversionData()));
    {%- else %}
        {{ set_value(property) }}(*primitiveValue);
    {%- endif %}
}
