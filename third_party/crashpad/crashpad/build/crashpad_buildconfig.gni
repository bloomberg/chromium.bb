    }

    if (crashpad_is_in_chromium) {
      deps += [ "//build/config:exe_and_shlib_deps" ]
    } else if (crashpad_is_in_fuchsia) {
      configs += [ "//build/config/fuchsia:fdio_config" ]
    }
  }
}
