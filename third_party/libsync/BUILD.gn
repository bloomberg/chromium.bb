config("libsync_config") {
  include_dirs = [
    "include",
    "src",
    "src/include",
  ]
}

source_set("libsync") {
  sources = [
    "include/linux/sw_sync.h",
    "include/linux/sync.h",
    "src/include/sync.h",
    "src/sw_sync.h",
    "src/sync.c",
    "strlcpy.c",
  ]

  configs -= [ "//build/config/compiler:chromium_code" ]
  configs += [ "//build/config/compiler:no_chromium_code" ]

  public_configs = [ ":libsync_config" ]
}
